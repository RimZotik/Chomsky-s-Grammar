{
  "name": "chomsky-grammar",
  "version": "1.0.0",
  "description": "Electron + React + TypeScript application",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build": "cross-env NODE_ENV=development webpack",
    "dev": "concurrently \"webpack --mode=development --watch\" \"wait-on dist/main.js && electron .\" --kill-others",
    "pack:windows": "cross-env NODE_ENV=production webpack && electron-builder --win --dir",
    "pack:linux": "cross-env NODE_ENV=production webpack && electron-builder --linux --dir",
    "pack:mac": "cross-env NODE_ENV=production webpack && electron-builder --mac --dir"
  },
  "keywords": [
    "electron",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "canvas": "^3.2.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^10.0.0",
    "css-loader": "^6.8.1",
    "electron": "^27.1.3",
    "electron-builder": "^26.0.12",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.4",
    "png-to-ico": "^3.0.1",
    "rimraf": "^6.0.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rechoir": "^0.8.0"
  },
  "build": {
    "appId": "com.chomsky-grammar.app",
    "productName": "Chomsky Grammar",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Chomsky Grammar"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Education",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.education"
    }
  }
}
